<Choose>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tesco"
            font_size: 24
            on_press: root.toTesco()
            Image:
                source: 'tesco.png'
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                width: self.parent.width
                keep_ratio: False
                allow_stretch: True
        Button:
            text: "BestBuy"
            font_size: 24
            on_press: root.toBestBuy()
            Image:
                source: 'bestBuy.jpg'
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                width: self.parent.width
                keep_ratio: False
                allow_stretch: True

<tescoWindow>:
    searchBar: searchBar
    resultArea: resultArea

    FloatLayout:
        Label:
            text: "Search:"
            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            pos_hint: {"x": 0.1 , "top":0.9}
            size_hint: 0.2, 0.05

        TextInput:
            id: searchBar
            font_size: (root.width**2 + root.height**2) / 15**4
            multiline: False
            pos_hint: {"x": 0.25 , "top":0.9}
            size_hint: 0.4, 0.05

        Button:
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.75, "top":0.9}
            size_hint: 0.2, 0.05
            text: "Submit"
            on_release:
                root.search()

        Button:
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0, "top":1}
            size_hint: 0.2, 0.05
            text: "< Back"
            on_release:
                root.back()

        ScrollView:
            background_normal: ''
            id: scrollLayout
            pos_hint: {"x":0, "top":0.8}
            canvas.before:
                Color:
                    rgba: (0,.1,.7,.2)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id: resultArea
                font_size: (root.width**2 + root.height**2) / 15**4
                multiline: True
                size_hint: None, None
                size: self.texture_size

