<Choose>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tesco"
            font_size: 24
            on_press: root.toTesco()
            Image:
                source: 'tesco.png'
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                width: self.parent.width
                keep_ratio: False
                allow_stretch: True
        Button:
            text: "BestBuy"
            font_size: 24
            on_press: root.toBestBuy()
            Image:
                source: 'bestBuy.jpg'
                y: self.parent.y
                x: self.parent.x
                size: self.parent.size
                width: self.parent.width
                keep_ratio: False
                allow_stretch: True

<tescoWindow>:
    searchBar: searchBar
    resultArea: resultArea

    FloatLayout:
        TextInput:
            id: searchBar
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.1 , "top":0.9}
            size_hint: 0.4, 0.15

        Button:
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.6, "top":0.9}
            size_hint: 0.35, 0.15
            text: "Submit"
            on_release:
                root.search()

        Label:
            id: resultArea
            text:"Results here "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.2, "top":0.4}
            size_hint: 0.35, 0.15

