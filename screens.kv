<Choose>:
    BoxLayout:
        orientation: 'vertical'

        Button:
            text: "Tesco"
            font_size: 24
            on_press: root.toTesco()
        Button:
            text: "BestBuy"
            font_size: 24
            on_press: root.toBestBuy()

<tescoWindow>:
    searchBar: searchBar
    resultArea: resultArea

    FloatLayout:
        TextInput:
            id: searchBar
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.1 , "top":0.9}
            size_hint: 0.4, 0.15

        Button:
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.6, "top":0.9}
            size_hint: 0.35, 0.15
            text: "Submit"
            on_release:
                root.search()

        Label:
            id: resultArea
            text:"Results here "
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.2, "top":0.4}
            size_hint: 0.35, 0.15

